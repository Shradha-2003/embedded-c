#include <LiquidCrystal.h>

LiquidCrystal lcd(2, 3, 4, 5, 6, 7);

unsigned long timer1;
unsigned long timer2;
float Time;

int flag1 = 0;
int flag2 = 0;

float distance = 5.0; // Distance between the two IR sensors in meters
float speed;

int ir_s1 = A0;
int ir_s2 = A1;

int buzzer = 13;

void setup() {
  pinMode(ir_s1, INPUT);
  pinMode(ir_s2, INPUT);
  pinMode(buzzer, OUTPUT);
  
  Serial.begin(9600);
  
  lcd.begin(16, 2);
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print(" WELCOME To  My ");
  lcd.setCursor(0, 1);
  lcd.print("YouTube  Channel");
  delay(2000);
  lcd.clear();
}

void loop() {
  if (digitalRead(ir_s1) == LOW && flag1 == 0) {
    timer1 = millis(); 
    flag1 = 1;
  }

  if (digitalRead(ir_s2) == LOW && flag2 == 0) {
    timer2 = millis(); 
    flag2 = 1;
  }

  if (flag1 == 1 && flag2 == 1) {
    // Calculate the time taken to cross the distance between the two IR sensors
    Time = abs(timer1 - timer2) / 1000.0; // Convert milliseconds to seconds
    // Calculate the speed
    speed = distance / Time; // Speed = distance / time in seconds
    Serial.println(speed);
  }
  else {
    Serial.println("Configure IR");
  }

  if (speed == 0) { 
    lcd.setCursor(0, 1); 
    if (flag1 == 0 && flag2 == 0) {
      lcd.print("No car detected");
    } else {
      lcd.print("Searching...    ");
    } 
  } else {
    lcd.clear(); 
    lcd.setCursor(0, 0); 
    lcd.print("Speed:");
    lcd.print(speed, 1);
    lcd.print(" Km/Hr  ");
    lcd.setCursor(0, 1); 
    if (speed > 2) {
      //lcd.print("  Over Speeding  "); 
      digitalWrite(buzzer, HIGH);
    } else {
      //lcd.print("  Normal Speed   ");
      digitalWrite(buzzer, LOW); // Turn off the buzzer if speed is normal
    }    
    delay(3000); // Display the speed for 3 seconds
    speed = 0;
    flag1 = 0;
    flag2 = 0;    
  }
  
  delay(500); // Adjust the delay to increaseÂ sensitivity
}
